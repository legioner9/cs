using System;
using System.Dynamic;
using System.Collections.Generic;
using System.Xml;
using Microsoft.VisualBasic;
using System.Text.RegularExpressions;
using System.Globalization;
using System.Data;
using System.IO;
namespace cs_cli
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Enter text for write to new.file");
            string w_txt = Console.ReadLine();

            using (FileStream stream_fl = new FileStream("new.file", FileMode.OpenOrCreate))
            {
                byte[] txt_as_buf = System.Text.Encoding.Default.GetBytes(w_txt); // txt_as_arr_of_char is buffer
                stream_fl.Write(txt_as_buf, 1, txt_as_buf.Length-1);
            }

            using (FileStream stream_fl = File.OpenRead("new.file"))
            {
                byte[] txt_as_buf = new byte[stream_fl.Length];
                stream_fl.Read(txt_as_buf, 0, txt_as_buf.Length);

                string txt_from_file = System.Text.Encoding.Default.GetString(txt_as_buf);
                Console.WriteLine(txt_from_file);
            }

        }

    }
}


